<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <AssemblyName>MudProxyViewer</AssemblyName>
    <RootNamespace>MudProxyViewer</RootNamespace>
    <Version>0.1.0</Version>
    <Authors>Your Name</Authors>
    <Description>A proxy viewer for MajorMUD that displays all server/client traffic</Description>
    
    <!-- This makes it publish as a single .exe file -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
  </PropertyGroup>

</Project>
